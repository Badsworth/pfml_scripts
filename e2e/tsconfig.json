{
  "compilerOptions": {
    "strict": true,
    // @Todo: This flag causes the catch variable
    // to be typed any. Once removed (or set to true)
    // it will cause numerous ts errors in which the
    // catch clause var will need to be explicity typed.
    "useUnknownInCatchVariables": false,
    "lib": [
      "DOM",
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "types": ["cypress", "node", "@testing-library/cypress"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "jsx": "react",
    "noImplicitThis": false,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "JSONStream": ["../types/JSONStream"]
    }
  },
  "include": ["src/**/*.ts", "cypress/**/*.ts", "*.ts"],
  "exclude": ["scripts/*", "data/*"]
}
