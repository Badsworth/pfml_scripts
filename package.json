{
  "name": "Tools",
  "version": "1.0.0",
  "description": "Tools and scripts for the Mass PFML project",
  "scripts": {
    "lint:js": "eslint --ext .js",
    "lint:js:all": "npm run lint:js -- ./",
    "lint:tf": "./bin/tf-fmt.sh",
    "lint": "npm run lint:js:all && npm run lint:tf"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-nava": "^8.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsdoc": "^20.3.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^4.0.9",
    "lint-staged": "^9.5.0",
    "prettier": "^2.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{tf,tfvars}": [
      "npm run lint:tf",
      "git add"
    ]
  }
}
