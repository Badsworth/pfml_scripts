{
  "name": "tools",
  "version": "1.0.0",
  "description": "Tools and scripts for the Mass PFML project",
  "scripts": {
    "lint:ci": "npm run lint:js && npm run lint:tf",
    "lint:js": "eslint --ext .js ./",
    "lint:tf": "./bin/tf-fmt.sh",
    "lint": "npm run lint:js -- --fix && npm run lint:tf",
    "prettier": "prettier --write '**/*.{js,json,md,mdx,scss,yaml,yml}'"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-nava": "^9.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsdoc": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-todo-plz": "^1.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.6",
    "prettier": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "!(bin)/**/*.{tf,tfvars}": [
      "npm run lint:tf",
      "git add"
    ]
  }
}
