{
  "name": "tools",
  "version": "1.0.0",
  "description": "Tools and scripts for the Mass PFML project",
  "engines": {
    "node": ">=15",
    "npm": ">=7"
  },
  "scripts": {
    "docs": "docker run --rm -it -p 8000:8000 -v ${PWD}:/docs squidfunk/mkdocs-material",
    "docs:build": "docker run --rm -v ${PWD}:/docs squidfunk/mkdocs-material build",
    "lint:ci": "npm run lint:js && npm run lint:tf",
    "lint:js": "eslint --ext .js ./",
    "lint:tf": "./bin/tf-fmt.sh",
    "lint": "npm run lint:js -- --fix && npm run lint:tf",
    "prettier": "prettier --write '**/*.{js,json,md,mdx,scss,yaml,yml}'"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.17.0",
    "eslint-config-nava": "^9.1.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsdoc": "^30.7.13",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-lodash": "^7.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-todo-plz": "^1.1.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "!(bin)/**/*.{tf,tfvars}": [
      "npm run lint:tf",
      "git add"
    ]
  }
}
