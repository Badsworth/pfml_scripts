[
  {
    "name": "${task_name}",
    "image": "${docker_image}",
    "command": ${command},
    "cpu": ${cpu},
    "memory": ${memory},
    "networkMode": "awsvpc",
    "essential": true,
    "readonlyRootFilesystem": false,
    "linuxParameters": {
      "capabilities": {
        "drop": ["ALL"]
      },
      "initProcessEnabled": true
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${cloudwatch_logs_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${environment_name}"
      }
    },
    "environment": [
      { "name": "ENVIRONMENT", "value": "${environment_name}" },
      { "name": "LOGGING_LEVEL", "value": "${logging_level}" },

      { "name": "DB_HOST", "value": "${db_host}" },
      { "name": "DB_NAME", "value": "${db_name}" },
      { "name": "DB_USERNAME", "value": "${db_username}" },

      { "name": "FINEOS_CLAIMANT_EXTRACT_MAX_HISTORY_DATE", "value": "2021-04-21" },
      { "name": "FINEOS_PAYMENT_EXTRACT_MAX_HISTORY_DATE", "value": "2021-04-21" },

      { "name": "FINEOS_AWS_IAM_ROLE_ARN", "value": "${fineos_aws_iam_role_arn}" },
      { "name": "FINEOS_AWS_IAM_ROLE_EXTERNAL_ID", "value": "${fineos_aws_iam_role_external_id}" },
      { "name": "FINEOS_DATA_EXPORT_PATH", "value": "${fineos_data_export_path}" },

      { "name": "PFML_FINEOS_EXTRACT_ARCHIVE_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/cps/extracts" },
      { "name": "PFML_ERROR_REPORTS_ARCHIVE_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/reports" },

      { "name": "DFML_REPORT_OUTBOUND_PATH", "value": "s3://massgov-pfml-${environment_name}-reports/dfml-reports"}
    ],
    "secrets": [
      { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" },
      { "name": "NR_INSERT_API_KEY", "valueFrom": "/admin/pfml-api/newrelic-insert-api-key" },
      { "name": "EXPERIAN_AUTH_TOKEN", "valueFrom": "/service/${app_name}/common/experian-auth-token" },
      { "name": "NEW_RELIC_LICENSE_KEY", "valueFrom": "/service/${app_name}/common/newrelic-license-key"}
    ]
  }
]
