[
  {
    "name": "${task_name}",
    "image": "${docker_image}",
    "command": ${command},
    "cpu": ${cpu},
    "memory": ${memory},
    "networkMode": "awsvpc",
    "essential": true,
    "readonlyRootFilesystem": false,
    "linuxParameters": {
      "capabilities": {
        "drop": ["ALL"]
      },
      "initProcessEnabled": true
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${cloudwatch_logs_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${environment_name}"
      }
    },
    "environment": [
      { "name": "ENVIRONMENT", "value": "${environment_name}" },
      { "name": "LOGGING_LEVEL", "value": "${logging_level}" },

      { "name": "DB_HOST", "value": "${db_host}" },
      { "name": "DB_NAME", "value": "${db_name}" },
      { "name": "DB_USERNAME", "value": "${db_username}" },

      { "name": "FINEOS_AWS_IAM_ROLE_ARN", "value": "${fineos_aws_iam_role_arn}" },
      { "name": "FINEOS_AWS_IAM_ROLE_EXTERNAL_ID", "value": "${fineos_aws_iam_role_external_id}" },

      { "name": "FINEOS_DATA_EXPORT_PATH", "value": "${fineos_data_export_path}" },
      { "name": "PFML_FINEOS_INBOUND_PATH", "value": "${pfml_fineos_inbound_path}" },
      { "name": "PFML_ERROR_REPORTS_PATH", "value": "${pfml_error_reports_path}" },
      { "name": "PFML_VOUCHER_OUTPUT_PATH", "value": "${pfml_voucher_output_path}" },

      { "name": "FINEOS_VENDOR_MAX_HISTORY_DATE", "value": "${fineos_vendor_max_history_date}" },

      { "name": "PFML_EMAIL_ADDRESS", "value": "${pfml_email_address}" },
      { "name": "BOUNCE_FORWARDING_EMAIL_ADDRESS", "value": "${bounce_forwarding_email_address}" },
      { "name": "BOUNCE_FORWARDING_EMAIL_ADDRESS_ARN", "value": "${bounce_forwarding_email_address_arn}" },
      { "name": "DFML_BUSINESS_OPERATIONS_EMAIL_ADDRESS", "value": "${dfml_business_operations_email_address}" },

      { "name": "CTR_DATA_MART_HOST", "value": "${ctr_data_mart_host}" },
      { "name": "CTR_DATA_MART_USERNAME", "value": "${ctr_data_mart_username}" },

      { "name": "ENABLE_SENTRY", "value": "${enable_sentry}"}

    ],
    "secrets": [
      { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" },
      { "name": "CTR_DATA_MART_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/ctr-data-mart-password" }
    ]
  }
]
