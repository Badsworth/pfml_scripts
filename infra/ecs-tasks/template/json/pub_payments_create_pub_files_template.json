[
    {
      "name": "${task_name}",
      "image": "${docker_image}",
      "command": ${command},
      "cpu": ${cpu},
      "memory": ${memory},
      "networkMode": "awsvpc",
      "essential": true,
      "readonlyRootFilesystem": false,
      "linuxParameters": {
        "capabilities": {
          "drop": ["ALL"]
        },
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${cloudwatch_logs_group_name}",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "${environment_name}"
        }
      },
      "environment": [
        { "name": "ENVIRONMENT", "value": "${environment_name}" },
        { "name": "LOGGING_LEVEL", "value": "${logging_level}" },

        { "name": "DB_HOST", "value": "${db_host}" },
        { "name": "DB_NAME", "value": "${db_name}" },
        { "name": "DB_USERNAME", "value": "${db_username}" },

        { "name": "FINEOS_DATA_EXPORT_PATH", "value": "${fineos_data_export_path}" },
        { "name": "FINEOS_DATA_IMPORT_PATH", "value": "${fineos_data_import_path}" },
        { "name": "PFML_FINEOS_INBOUND_PATH", "value": "${pfml_fineos_inbound_path}" },
        { "name": "PFML_FINEOS_OUTBOUND_PATH", "value": "${pfml_fineos_outbound_path}" },

        { "name": "PFML_ERROR_REPORTS_PATH", "value": "${pfml_error_reports_path}" },
        { "name": "PFML_ERROR_REPORTS_ARCHIVE_PATH", "value": "s3://massgov-pfml-{environment_name}-agency-transfer/error-reports/sent" },
        { "name": "PFML_PUB_OUTBOUND_PATH", "value": "s3://massgov-pfml-{environment_name}-agency-transfer/pub/outbound" },
        { "name": "PFML_PUB_INBOUND_PATH", "value": "s3://massgov-pfml-{environment_name}-agency-transfer/pub/inbound" },
        { "name": "PFML_PUB_CHECK_INBOUND_PATH", "value": "s3://massgov-pfml-{environment_name}-agency-transfer/pub/inbound_check" },

        { "name": "PAYMENT_REJECTS_RECEIVED_FOLDER_PATH", "value": "s3://massgov-pfml-${environment_name}-reports/audit/inbound" },
        { "name": "PAYMENT_REJECTS_PROCESSED_FOLDER_PATH", "value": "s3://massgov-pfml-${environment_name}-reports/audit/processed" },
        { "name": "PAYMENT_REJECTS_REPORT_OUTBOUND_FOLDER", "value": "s3://massgov-pfml-${environment_name}-reports/audit/outbound" },
        { "name": "PAYMENT_REJECTS_REPORT_SENT_FOLDER_PATH", "value": "s3://massgov-pfml-${environment_name}-reports/audit/sent" }
      ],
      "secrets": [
        { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" },
        { "name": "DFML_PUB_ROUTING_NUMBER", "valueFrom": "/service/${app_name}/${environment_name}/dfml_pub_routing_number" },
        { "name": "DFML_PUB_ACCOUNT_NUMBER", "valueFrom": "/service/${app_name}/${environment_name}/dfml_pub_account_number" }
      ]
    }
  ]
