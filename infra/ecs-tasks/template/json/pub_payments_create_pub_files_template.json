[
    {
      "name": "${task_name}",
      "image": "${docker_image}",
      "command": ${command},
      "cpu": ${cpu},
      "memory": ${memory},
      "networkMode": "awsvpc",
      "essential": true,
      "readonlyRootFilesystem": false,
      "linuxParameters": {
        "capabilities": {
          "drop": ["ALL"]
        },
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${cloudwatch_logs_group_name}",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "${environment_name}"
        }
      },
      "environment": [
        { "name": "ENVIRONMENT", "value": "${environment_name}" },
        { "name": "LOGGING_LEVEL", "value": "${logging_level}" },

        { "name": "DB_HOST", "value": "${db_host}" },
        { "name": "DB_NAME", "value": "${db_name}" },
        { "name": "DB_USERNAME", "value": "${db_username}" },

        { "name":  "PAYMENT_REJECTS_RECEIVED_FOLDER_PATH",  "value": "${payment_rejects_received_folder_path}"},
        { "name":  "PAYMENT_REJECTS_PROCESSED_FOLDER_PATH",  "value": "${payment_rejects_processed_folder_path}"},
        { "name":  "PAYMENT_REJECTS_REPORT_OUTBOUND_FOLDER",  "value": "${payment_rejects_report_outbound_folder}"},
        { "name":  "PAYMENT_REJECTS_REPORT_SENT_FOLDER_PATH",  "value": "${payment_rejects_report_sent_folder_path}"}
      ],
      "secrets": [
        { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" },
        { "name": "DFML_PUB_ROUTING_NUMBER", "valueFrom": "/service/${app_name}/${environment_name}/dfml_pub_routing_number" },
        { "name": "DFML_PUB_ACCOUNT_NUMBER", "valueFrom": "/service/${app_name}/${environment_name}/dfml_pub_account_number" }
      ]
    }
  ]
