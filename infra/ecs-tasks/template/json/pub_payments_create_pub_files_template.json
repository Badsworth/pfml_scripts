[
    {
      "name": "${task_name}",
      "image": "${docker_image}",
      "command": ${command},
      "cpu": ${cpu},
      "memory": ${memory},
      "networkMode": "awsvpc",
      "essential": true,
      "readonlyRootFilesystem": false,
      "linuxParameters": {
        "capabilities": {
          "drop": ["ALL"]
        },
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${cloudwatch_logs_group_name}",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "${environment_name}"
        }
      },
      "environment": [
        { "name": "ENVIRONMENT", "value": "${environment_name}" },
        { "name": "LOGGING_LEVEL", "value": "${logging_level}" },

        { "name": "DB_HOST", "value": "${db_host}" },
        { "name": "DB_NAME", "value": "${db_name}" },
        { "name": "DB_USERNAME", "value": "${db_username}" },

        { "name": "FINEOS_AWS_IAM_ROLE_ARN", "value": "${fineos_aws_iam_role_arn}" },
        { "name": "FINEOS_AWS_IAM_ROLE_EXTERNAL_ID", "value": "${fineos_aws_iam_role_external_id}" },

        { "name": "PFML_FINEOS_WRITEBACK_ARCHIVE_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/cps/pei-writeback" },
        { "name": "FINEOS_DATA_IMPORT_PATH", "value": "${fineos_data_import_path}" },

        { "name": "DFML_REPORT_OUTBOUND_PATH", "value": "s3://massgov-pfml-${environment_name}-reports/dfml-reports" },
        { "name": "DFML_RESPONSE_INBOUND_PATH", "value": "s3://massgov-pfml-${environment_name}-reports/dfml-responses" },
        { "name": "PUB_MOVEIT_INBOUND_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/pub/inbound" },
        { "name": "PUB_MOVEIT_OUTBOUND_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/pub/outbound" },

        { "name": "PFML_PUB_ACH_ARCHIVE_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/pub/ach" },
        { "name": "PFML_PUB_CHECK_ARCHIVE_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/pub/check" },

        { "name": "PFML_ERROR_REPORTS_ARCHIVE_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/reports" },

        { "name": "PFML_PAYMENT_REJECTS_ARCHIVE_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/audit" }
      ],
      "secrets": [
        { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" },
        { "name": "NR_INSERT_API_KEY", "valueFrom": "/admin/pfml-api/newrelic-insert-api-key" },
        { "name": "DFML_PUB_ROUTING_NUMBER", "valueFrom": "/service/${app_name}/${environment_name}/dfml_pub_routing_number" },
        { "name": "DFML_PUB_ACCOUNT_NUMBER", "valueFrom": "/service/${app_name}/${environment_name}/dfml_pub_account_number" }
      ]
    }
  ]
