[
  {
    "name": "${task_name}",
    "image": "${docker_image}",
    "command": ${command},
    "cpu": ${cpu},
    "memory": ${memory},
    "networkMode": "awsvpc",
    "essential": true,
    "readonlyRootFilesystem": false,
    "linuxParameters": {
      "capabilities": {
        "drop": ["ALL"]
      },
      "initProcessEnabled": true
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${cloudwatch_logs_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${environment_name}"
      }
    },
    "environment": [
      { "name": "ENVIRONMENT", "value": "${environment_name}" },
      { "name": "DB_HOST", "value": "${db_host}" },
      { "name": "DB_NAME", "value": "${db_name}" },
      { "name": "DB_USERNAME", "value": "${db_username}" },
      { "name": "LOGGING_LEVEL", "value": "${logging_level}" },

      { "name": "S3_BUCKET", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/" },
      { "name": "S3_DIA_ARCHIVE_DIRECTORY_PATH", "value": "reductions/dia/archive" },
      { "name": "S3_DIA_PENDING_DIRECTORY_PATH", "value": "reductions/dia/pending" },
      { "name": "S3_DUA_ARCHIVE_DIRECTORY_PATH", "value": "reductions/dua/archive" },
      { "name": "S3_DUA_PENDING_DIRECTORY_PATH", "value": "reductions/dua/pending" },

      { "name": "MOVEIT_SFTP_URI", "value": "${eolwd_moveit_sftp_uri}" },
      { "name": "MOVEIT_DIA_ARCHIVE_PATH", "value": "/DFML/DIA/Archive" },
      { "name": "MOVEIT_DIA_INBOUND_PATH", "value": "/DFML/DIA/Inbound" },
      { "name": "MOVEIT_DUA_ARCHIVE_PATH", "value": "/DFML/DUA/Archive" },
      { "name": "MOVEIT_DUA_INBOUND_PATH", "value": "/DFML/DUA/Outbound" }
    ],
    "secrets": [
      { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" },
      { "name": "MOVEIT_SSH_KEY", "valueFrom": "/service/${app_name}-comptroller/${environment_name}/eolwd-moveit-ssh-key" },
      { "name": "MOVEIT_SSH_KEY_PASSWORD", "valueFrom": "/service/${app_name}-comptroller/${environment_name}/eolwd-moveit-ssh-key-password" }
    ]
  }
]
