[
  {
    "name": "${task_name}",
    "image": "${docker_image}",
    "command": ${command},
    "cpu": ${cpu},
    "memory": ${memory},
    "networkMode": "awsvpc",
    "essential": true,
    "readonlyRootFilesystem": false,
    "linuxParameters": {
      "capabilities": {
        "drop": ["ALL"]
      },
      "initProcessEnabled": true
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${cloudwatch_logs_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${environment_name}"
      }
    },
    "environment": [
      { "name": "ENVIRONMENT", "value": "${environment_name}" },
      { "name": "DB_HOST", "value": "${db_host}" },
      { "name": "DB_NAME", "value": "${db_name}" },
      { "name": "DB_USERNAME", "value": "${db_username}" },
      { "name": "DECRYPT", "value": "true" },
      { "name": "FOLDER_PATH", "value": "s3://massgov-pfml-${environment_name}-agency-transfer/dor/received" },
      { "name": "ENABLE_SENTRY", "value": "${enable_sentry}"}
    ],
    "secrets": [
      { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" },
      { "name": "GPG_DECRYPTION_KEY", "valueFrom": "/service/${app_name}-dor-import/${environment_name}/gpg_decryption_key" },
      { "name": "GPG_DECRYPTION_KEY_PASSPHRASE", "valueFrom": "/service/${app_name}-dor-import/${environment_name}/gpg_decryption_key_passphrase" },
      { "name": "NR_INSERT_API_KEY", "valueFrom": "/admin/pfml-api/newrelic-insert-api-key" }
    ]
  }
]
