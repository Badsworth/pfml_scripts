[
    {
      "name": "${task_name}",
      "image": "${docker_image}",
      "command": ${command},
      "cpu": ${cpu},
      "memory": ${memory},
      "networkMode": "awsvpc",
      "essential": true,
      "readonlyRootFilesystem": false,
      "linuxParameters": {
        "capabilities": {
          "drop": ["ALL"]
        },
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${cloudwatch_logs_group_name}",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "${environment_name}"
        }
      },
      "environment": [
        { "name": "ENVIRONMENT", "value": "${environment_name}" },
        { "name": "LOGGING_LEVEL", "value": "${logging_level}" },

        { "name": "DB_HOST", "value": "${db_host}" },
        { "name": "DB_NAME", "value": "${db_name}" },
        { "name": "DB_USERNAME", "value": "${db_username}" },

        { "name": "EOLWD_MOVEIT_SFTP_URI", "value": "${eolwd_moveit_sftp_uri}" },
        { "name": "CTR_MOVEIT_INCOMING_PATH", "value": "${ctr_moveit_incoming_path}" },
        { "name": "CTR_MOVEIT_OUTGOING_PATH", "value": "${ctr_moveit_outgoing_path}" },
        { "name": "CTR_MOVEIT_ARCHIVE_PATH", "value": "${ctr_moveit_archive_path}" },
        { "name": "PFML_CTR_INBOUND_PATH", "value": "${pfml_ctr_inbound_path}" },
        { "name": "PFML_CTR_OUTBOUND_PATH", "value": "${pfml_ctr_outbound_path}" },
        { "name": "PFML_ERROR_REPORTS_PATH", "value": "${pfml_error_reports_path}" },


        { "name": "DFML_PROJECT_MANAGER_EMAIL_ADDRESS", "value": "${dfml_project_manager_email_address}" },
        { "name": "PFML_EMAIL_ADDRESS", "value": "${pfml_email_address}" },
        { "name": "BOUNCE_FORWARDING_EMAIL_ADDRESS", "value": "${bounce_forwarding_email_address}" },
        { "name": "CTR_GAX_BIEVNT_EMAIL_ADDRESS", "value": "${ctr_gax_bievnt_email_address}" },
        { "name": "CTR_VCC_BIEVNT_EMAIL_ADDRESS", "value": "${ctr_vcc_bievnt_email_address}" },
        { "name": "DFML_BUSINESS_OPERATIONS_EMAIL_ADDRESS", "value": "${dfml_business_operations_email_address}" },
        { "name": "BOUNCE_FORWARDING_EMAIL_ADDRESS_ARN", "value": "${bounce_forwarding_email_address_arn}" },

        { "name": "CTR_DATA_MART_HOST", "value": "${ctr_data_mart_host}" },
        { "name": "CTR_DATA_MART_USERNAME", "value": "${ctr_data_mart_username}" }
      ],
      "secrets": [
        { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" },
        { "name": "CTR_DATA_MART_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/ctr-data-mart-password" },
        { "name": "CTR_MOVEIT_SSH_KEY", "valueFrom": "/service/${app_name}-comptroller/${environment_name}/eolwd-moveit-ssh-key" },
        { "name": "CTR_MOVEIT_SSH_KEY_PASSWORD", "valueFrom": "/service/${app_name}-comptroller/${environment_name}/eolwd-moveit-ssh-key-password" }
      ]
    }
  ]
