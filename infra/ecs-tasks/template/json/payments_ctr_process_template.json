[
    {
      "name": "${task_name}",
      "image": "${docker_image}",
      "command": ${command},
      "cpu": ${cpu},
      "memory": ${memory},
      "networkMode": "awsvpc",
      "essential": true,
      "readonlyRootFilesystem": false,
      "linuxParameters": {
        "capabilities": {
          "drop": ["ALL"]
        },
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${cloudwatch_logs_group_name}",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "${environment_name}"
        }
      },
      "environment": [
        { "name": "ENVIRONMENT", "value": "${environment_name}" },
        { "name": "LOGGING_LEVEL", "value": "${logging_level}" },

        { "name": "DB_HOST", "value": "${db_host}" },
        { "name": "DB_NAME", "value": "${db_name}" },
        { "name": "DB_USERNAME", "value": "${db_username}" },

        { "name": "PAYMENTS_GAX_BIEVNT_EMAIL", "value": "${payments_gax_bievnt_email}" },
        { "name": "PFML_EMAIL_ADDRESS", "value": "${pfml_email_address}" },
        { "name": "BOUNCE_FORWARDING_EMAIL_ADDRESS", "value": "${bounce_forwarding_email_address}" },

        { "name": "CTR_MOVEIT_INCOMING_PATH", "value": "${ctr_moveit_incoming_path}" },
        { "name": "CTR_MOVEIT_ARCHIVE_PATH", "value": "${ctr_moveit_archive_path}" },
        { "name": "PFML_CTR_INBOUND_PATH", "value": "${pfml_ctr_inbound_path}" },
        { "name": "CTR_MOVEIT_OUTGOING_PATH", "value": "${ctr_moveit_outgoing_path}" },
        { "name": "PFML_CTR_OUTBOUND_PATH", "value": "${pfml_ctr_outbound_path}" }
      ],
      "secrets": [
        { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" }
      ]
    }
  ]
