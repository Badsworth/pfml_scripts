[
  {
    "name": "${app_name}-RDS",
    "image": "${docker_image}",
    "command": [
      "db-admin-create-rds-user"
    ],
    "cpu": ${cpu
    },
    "memory": ${memory
    },
    "networkMode": "awsvpc",
    "essential": true,
    "readonlyRootFilesystem": true,
    "linuxParameters": {
      "capabilities": {
        "drop": [
          "ALL"
        ]
      },
      "initProcessEnabled": true
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${cloudwatch_logs_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${environment_name}"
      }
    },
    "environment": [
      {
        "name": "ENVIRONMENT",
        "value": "${environment_name}"
      },
      {
        "name": "DB_HOST",
        "value": "${db_host}"
      },
      {
        "name": "DB_NAME",
        "value": "${db_name}"
      },
      {
        "name": "DB_USERNAME",
        "value": "${db_username}"
      }
    ],
    "secrets": [
      {
        "name": "DB_PASSWORD",
        "valueFrom": "/service/${app_name}/${environment_name}/db-password"
      }
    ]
  }
]