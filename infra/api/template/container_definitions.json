[
  {
    "name": "${app_name}",
    "image": "${docker_image}",
    "cpu": ${cpu},
    "memory": ${memory},
    "networkMode": "awsvpc",
    "essential": true,
    "readonlyRootFilesystem": true,
    "portMappings": [
      {
        "containerPort": 1550,
        "hostPort": 1550
      }
    ],
    "linuxParameters": {
      "capabilities": {
        "drop": ["ALL"]
      },
      "initProcessEnabled": true
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${cloudwatch_logs_group_name}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${environment_name}"
      }
    },
    "environment": [
      { "name": "ENVIRONMENT", "value": "${environment_name}" },
      { "name": "ENABLE_FULL_ERROR_LOGS", "value": "${enable_full_error_logs}" },
      { "name": "DB_HOST", "value": "${db_host}" },
      { "name": "DB_NAME", "value": "${db_name}" },
      { "name": "DB_USERNAME", "value": "${db_username}" },
      { "name": "CORS_ORIGINS", "value": "${cors_origins}" },
      { "name": "COGNITO_USER_POOL_KEYS_URL", "value": "${cognito_user_pool_keys_url}"}
    ],
    "secrets": [
      { "name": "DB_PASSWORD", "valueFrom": "/service/${app_name}/${environment_name}/db-password" }
    ]
  }
]
